{
    "env": {
        "node": true,
        "browser": true,
        "es2021": true
    },
    "plugins": [
        "eta"
    ],
    "extends": [
        "google",
        "plugin:storybook/recommended",
        "plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended"
    ],
    "overrides": [
        {
            "files": "./icon-library/react/*.{jsx,tsx}",
            "rules": {
                "max-len": "off"
            }
        },
        {
            "files": [
                "./templates/*.eta",
                "./tests/*.eta"
            ],
            "processor": "eta/eta"
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "require-jsdoc": 0
    }
}
